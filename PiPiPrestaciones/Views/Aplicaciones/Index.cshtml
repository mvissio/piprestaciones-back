@model IEnumerable<PiPiPrestaciones.Models.Aplicacion>

@{
    ViewBag.Title = "Aplicaciones";
}

<div class="row">
    <div class="col s4">
        <h4>Aplicaciones</h4>
    </div>
    <div class="col s3 offset-s5">
        <a class="btn btn-large btn-add" href="@Url.Action("Create","Aplicaciones")"><i class="left material-icons">phone_android</i> Incorporar Aplicación</a>  
    </div>
</div>



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VersionId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastModification)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VersionId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastModification)
        </td>
       
        <td style="position: relative; height: 70px;">
            <div class="fixed-action-btn horizontal" style="position: absolute; display: inline-block; right: 24px;">
                <a class="btn-floating btn-large red">
                    <i class="large material-icons">mode_edit</i>
                </a>
                <ul>
                
                    <li><a class="btn-floating blue tooltipped" data-position="bottom" data-delay="50" data-tooltip="Edite las páginas de menu de la app" href="@Url.Action("Edit","Aplicaciones",new { id = item.AplicacionId })"><i class="material-icons">phonelink_setup</i></a></li>
                    <li><a class="btn-floating yellow darken-1 tooltipped" data-position="bottom" data-delay="50" data-tooltip="Edite el menú de la app"><i class="material-icons">menu</i></a></li>
                    <li><a class="btn-floating green tooltipped" data-position="bottom" data-delay="50" data-tooltip="Edite info de la app"><i class="material-icons">storage</i></a></li>
                  
                  
                </ul>
            </div>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.AplicacionId }) |*@
            
        </td>
    </tr>
}

</table>


<style>
    .fixed-action-btn {
    position:center;
    }

</style>